<style>
  .blog-container {
    background-color: var(--wizardWhite);
    margin: 0 auto;
    padding: 1rem;
    text-align: center;
  }

  .blog-container h1 {
    color: var(--tpkBlack);
    font-size: 2rem;
  }

  .blog-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
    list-style: none;
    margin: 0 auto;
    max-width: 88ch;
    padding: 1rem;
  }

  nav ul li {
    height: 14rem;
    width: 100%;
  }

  nav ul li a {
    align-items: center;
    background: var(--manaBlue);
    border-radius: 1rem;
    color: var(--tpkBlack);
    display: flex;
    flex-direction: column;
    font-size: xx-large;
    height: 100%;
    justify-content: center;
    padding: 1rem;
    text-decoration: none;
    width: 100%;
  }

  nav ul li a:hover {
    text-decoration: underline;
  }

  article {
    padding: 1rem;
    background: #fff;
  }

  @media screen and (min-width: 768px) {
    .blog-grid {
      display: grid;
      flex-direction: initial;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      grid-template-rows: 14rem;
      grid-gap: 1rem;
      height: 100%;
      list-style: none;
      margin: 0 auto;
      max-width: 88ch;
      padding: 1rem;
    }

    .blog-container h1 {
      font-size: 4rem;
      padding-bottom: 2rem;
      padding-top: 2rem;
    }
  }
</style>
