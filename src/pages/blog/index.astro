---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allBlogPosts = await getCollection("blog");

function getFormattedDate(date: string) {
  const options = { year: "numeric", month: "long", day: "numeric" };
  return new Date(date).toLocaleDateString(
    "en-US",
    options as Intl.DateTimeFormatOptions,
  );
}
---

<Layout title="Nurl Blog: Simplifying TTRPGs for everyone | Articles">
  <div class="blog-layout">
    <div class="blog-container">
      <div class="hero">
        <a href="/blog/the-practical-gm-part-1/">
          <div class="feature">
            <h1>
              <strong>Nurl</strong>
              <span>tips and guides for your TTRPGs</span>
            </h1>
            <h2>The Practical GM</h2>
          </div>

          <div class="feature-highlight">
            <article>
              <small class="feature-highlight_date">5 October 2024</small>
              <p class="feature-highlight_heading">
                Part 1: Simplifying Complex Rules
              </p>
              <p class="feature-highlight_description">
                A GM's Guide to Keeping the Game Flowing.
              </p>
              <small class="feature-highlight_author">Author: Casey Baggz</small
              >
            </article>
          </div>
        </a>
      </div>
    </div>

    <hr />

    <div class="blog-container">
      <main>
        <nav class="articles">
          {
            allBlogPosts
              .map((post) => (
                <li class="articles_item">
                  <a href={`/blog/${post.data.slug}/`}>
                    <p class="articles_item_title">{post.data.title}</p>
                    <time datetime={post.data.date}>
                      {getFormattedDate(post.data.date)}
                    </time>
                  </a>
                </li>
              ))
              .reverse()
          }
        </nav>
      </main>
    </div>
  </div>
</Layout>

<style>
  .blog-layout {
    background-color: var(--wizardWhite);
  }
  .blog-container {
    margin: 0 auto;
    max-width: 88ch;
    padding-bottom: 2rem;
    padding-inline-start: 1rem;
    padding-inline-end: 1rem;
    width: 100%;
  }
  .blog-container:first-of-type {
    padding-bottom: initial;
    padding-top: 2rem;
  }

  .hero {
    border-radius: 1rem;
    transition: background-color 200ms ease-in-out;
  }
  .hero:hover {
    background-color: rgba(0, 0, 0, 0.05);
  }
  .hero a {
    display: block;
    color: var(--tpkBlack);
    border-radius: inherit;
    padding: 1rem;
    text-decoration: none;
  }

  .feature {
    align-items: center;
    background-color: var(--wizardWhite);
    border: 1px solid var(--tpkBlack);
    border-radius: inherit;
    box-shadow: 7px 7px 0px var(--tpkBlack);
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-bottom: 4rem;
    padding-inline-start: 2rem;
    padding-inline-end: 2rem;
    padding-top: 4rem;
    width: 100%;
  }

  h1 {
    color: var(--tpkBlack);
    font-size: 0.875rem;
    font-weight: 400;
    text-transform: uppercase;
  }
  h1 strong {
    font-weight: 600;
  }

  h2 {
    color: var(--tpkBlack);
    font-size: 2rem;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .feature-highlight {
    padding-bottom: 1rem;
    padding-top: 1.5rem;
  }
  .feature-highlight article {
    padding-inline-start: 0.3rem;
    padding-inline-end: 0.3rem;
  }
  .feature-highlight_date {
    display: block;
    color: #565656;
    font-size: 0.875rem;
    font-weight: normal;
    margin-bottom: 1rem;
  }
  .feature-highlight_heading {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .feature-highlight_description {
    color: #565656;
    font-size: 1rem;
    font-weight: 400;
    margin-bottom: 1rem;
  }
  .feature-highlight_author {
    display: block;
    color: var(--tpkBlack);
    font-size: 0.875rem;
    font-weight: normal;
  }

  hr {
    border: 0.5px solid rgba(0, 0, 0, 0.1);
    margin-top: 2rem;
  }

  main {
    padding-inline-start: 1rem;
    padding-inline-end: 1rem;
    padding-top: 2rem;
  }

  .articles {
    list-style: none;
  }
  .articles_item {
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    padding-top: 1rem;
    padding-bottom: 1rem;
  }
  .articles_item:first-child {
    border-top: none;
  }
  .articles_item a {
    border-radius: 0.25rem;
    display: block;
    color: var(--tpkBlack);
    padding-bottom: 0.5rem;
    padding-inline-start: 0.25rem;
    padding-inline-end: 0.25rem;
    padding-top: 0.5rem;
    text-decoration: none;
    transition:
      background-color,
      color 200ms ease-in-out;
  }
  .articles_item a:hover {
    background-color: rgba(0, 0, 0, 0.05);
    text-decoration: underline;
    text-decoration-color: var(--fourXBlue);
  }
  .articles_item_title {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }
  .articles_item time {
    color: #565656;
    font-size: 0.875rem;
    font-weight: normal;
  }

  @media screen and (min-width: 768px) {
  }
</style>
