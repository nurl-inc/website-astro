import Layout from "../../layouts/Layout.astro";
const { title } = Astro.props;
---

<Layout title="Nurl Blog">
  <div class="blog-container">
    <h1>Articles</h1>
    <nav>
      <ul class="blog-grid">
        <li><a href="/blog/feature-focus-nuro">Feature Focus: Nuroâ„¢</a></li>
        <li>
