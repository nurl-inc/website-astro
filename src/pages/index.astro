---
import { Icon } from 'astro-icon';
import Layout from '../layouts/Layout.astro';
import { actionBg, surface, text } from '../components/GlobalStyles.astro';
import '../components/GlobalStyles.astro';

const socialLinks = [
	{
		name: 'Twitter',
		url: 'https://twitter.com/nurl_app',
		icon: 'twitter'
	},
	{
		name: 'Instagram',
		url: 'https://instagram.com/nurl.app',
		icon: 'instagram'
	},
	// {
	// 	name: 'Facebook',
	// 	url: 'https://facebook.com/nurlttrpg',
	// 	icon: 'facebook'
	// },
	// {
	// 	name: 'YouTube',
	// 	url: 'https://youtube.com/nurlttrpg',
	// 	icon: 'youtube'
	// },
	{
		name: 'Twitch',
		url: 'https://twitch.tv/nurl_inc',
		icon: 'twitch'
	},
	{
		name: 'Discord',
		url: 'https://discord.gg/nurl',
		icon: 'discord'
	}
];
---

<Layout title="Nurl TTRPG">
	<header>
		<h1 class="logo">
			<img src="/logo.svg" alt="Nurl Logo" />
		</h1>
	</header>

	<main>
		<section>
			<p class="headline">
				The TTRPG companion you can't live without
			</p>
			<p class="headline-support">
				Nurl helps player's and GM's alike become the "10x Player"&trade; by providing a fully extensible, customizable, and interactive experience.
			</p>
		</section>

		<section>
			<p class="headline-cta">
				Sign up for early access
			</p>

			<form name="contact" data-netlify netlify-honeypt>
				<p class="hidden">
          <label>
            Don’t fill this out if you’re human: <input name="bot-field" />
          </label>
        </p>
				<input type="hidden" name="form-name" value="contact" />

				<label aria-label="Email" for="email">
					<input
						aria-required="true"
						type="email"
						id="email"
						name="email"
						placeholder="email@example.com"
						required
					/>
				</label>
				<button type="submit">Let me in</button>
			</form>
		</section>
	</main>

	<footer>
		<div class="sitemap">
			<section class="sitemap-links">
				list of links
			</section>

			<section>
				<ul>
					{socialLinks.map((link) => (
						<li>
							<a class="social-link" href={link.url}>
								<Icon pack="mdi" name={link.icon} />
							</a>
						</li>
					))}
				</ul>
			</section>
		</div>

		<section class="legal">
			<div class="legal-links">
				<a href="/privacy">Privacy Policy</a>
				<a href="/terms">Terms of Service</a>
			</div>

			<small>
				&copy; 2023 Nurl, Inc. All rights reserved.
			</small>
		</section>
	</footer>
</Layout>

<style define:vars={{
	actionBg,
	surface,
	text
}}>

	header {
		border-bottom: 1px solid rgba(0 0 0 / 0.1);
		text-align: center;
	}

	.logo {
		color: var(--text);
		font-size: 2rem;
		font-weight: bold;
		margin: 0 auto;
		width: 4rem;
	}
	main {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding-bottom: 4rem;
		padding-inline-start: 1rem;
		padding-inline-end: 1rem;
		padding-top: 4rem;
		text-align: center;
	}

	.headline,
	.headline-cta {
		font-size: 2rem;
		font-weight: bold;
	}

	.headline-support {
		font-size: 1.5rem;
		padding-bottom: 2.5rem;
		padding-top: 2.5rem;
		line-height: 1.5;
		max-width: 60ch;
	}

	.headline-cta {
		font-size: 1.5rem;
		padding-bottom: 1rem;
	}

	.hidden {
		display: none;
	}

	input {
		border: 1px solid var(--text);
		border-radius: 0.25rem;
		font-size: 1rem;
		padding-inline-end: 0.5rem;
		padding-inline-start: 0.5rem;
		height: 4rem;
		margin-bottom: 1rem;
		width: 100%;
	}

	button {
		appearance: none;
		border: none;
		background-color: var(--actionBg);
		border-radius: 2rem;
		color: var(--surface);
		font-size: 1.2rem;
		font-weight: bold;
		height: 4rem;
		width: 100%;
	}

	footer {
		align-items: center;
		background-color: var(--text);
		color: var(--surface);
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding-bottom: 1rem;
		padding-top: 1rem;
	}

	.sitemap {
		padding: 1rem;
		max-width: 60ch;
		width: 100%;
	}

	.sitemap-links {
		display: none;
	}

	ul {
		display: grid;
		grid-template-columns: repeat(4, 1fr);
		gap: 1rem;
		justify-items: center;
		list-style: none;
		margin: 0;
		padding: 0;
	}

	li {
		display: inline-block;
		width: 2rem;
	}

	.social-link {
		font-size: 1.5rem;
		width: 100%;
	}

	.social-link {
		fill: var(--surface);
	}

	.legal {
		text-align: center;
		max-width: 60ch;
		width: 100%;
	}

	.legal-links {
		align-items: center;
		border-top: 1px solid rgba(225 225 225 / 0.2);
		display: flex;
		justify-content: space-between;
		gap: 1rem;
		margin-inline-start: 1rem;
		margin-inline-end: 1rem;
		padding: 2rem;
	}

	a {
		display: inline-block;
		color: var(--surface);
	}

	small {
		font-size: 0.75rem;
		color: rgba(225 225 225 / 0.5)
	}

	@media (min-width: 768px) {
		.headline {
			font-size: 3rem;
		}

		.headline-support {
			font-size: 2rem;
		}

		.headline-cta {
			font-size: 2rem;
		}

		footer {
			padding-bottom: 4.5rem;
			padding-top: 4.5rem;
		}

		.legal-links {
			margin-inline-start: 0;
			margin-inline-end: 0;
		}
	}
</style>
