---
import Layout from '../layouts/Layout.astro';
import { surface, text } from '../components/GlobalStyles.astro';
import '../components/GlobalStyles.astro';
---

<Layout title="Nurl TTRPG">
	<header>
		<h1 class="logo">Nurl</h1>
	</header>

	<main>
		<section>
			<p class="headline">
				The TTRPG companion you can't live without
			</p>
			<p class="headline-support">
				Nurl helps player's and GM's alike become the "10x Player"&trade; by providing a fully extensible, customizable, and interactive experience.
			</p>
		</section>

		<section>
			<p class="headline-cta">
				Sign up for early access
			</p>

			<form name="contact" netlify>
				<p>
					<label>Email <input type="email" name="email" /></label>
				</p>
				<p>
					<button type="submit">sign up</button>
				</p>
			</form>
		</section>
	</main>

	<footer>
		<div class="sitemap">
			<section>
			list of links
		</section>

		<section>
			social links
		</section>
		</div>

		<section class="legal">
			<p>
				&copy; 2023 Nurl, Inc. All rights reserved.
			</p>
			<p>
				<a href="/privacy">Privacy Policy</a>
				<a href="/terms">Terms of Service</a>
			</p>
		</section>
	</footer>
</Layout>

<style define:vars={{
	surface,
	text
}}>

	header {
		border-bottom: 1px solid rgba(0 0 0 / 0.1);
		text-align: center;
	}

	.logo {
		color: var(--text);
		font-size: 2rem;
		font-weight: bold;
		padding: 1rem;
	}
	main {
		align-items: center;
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding-bottom: 4rem;
		padding-inline-start: 1rem;
		padding-inline-end: 1rem;
		padding-top: 4rem;
		text-align: center;
	}

	.headline,
	.headline-cta {
		font-size: 2rem;
		font-weight: bold;
	}

	.headline-support {
		font-size: 1.5rem;
		padding-bottom: 2.5rem;
		padding-top: 2.5rem;
		line-height: 1.5;
	}

	.headline-cta {
		font-size: 1.5rem;
		padding-bottom: 1rem;
	}

	footer {
		align-items: center;
		background-color: var(--text);
		color: var(--surface);
		display: flex;
		flex-direction: column;
		gap: 1rem;
		padding: 1rem;
	}
</style>
