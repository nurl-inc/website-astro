---
import { getCollection } from "astro:content";
import Layout from "../../layouts/Layout.astro";

const allJobsOpen = await getCollection("careers");
---

<Layout title="Nurl Careers">
  <div class="blog-container">
    <main>
      <h1>Work at Nurl</h1>
      <p>
        Nurl is home to passionate people that believe in our mission to make
        playing tabletop role-play games easy and fun. We are always looking for
        talented individuals to join our team and help us build a better
        tabletop role-play gaming experience.
      </p>
    </main>
    <nav>
      <ul class="blog-grid">
        {
          allJobsOpen
            .map((post) => (
              <li>
                <a href={`/careers/${post.data.slug}`}>{post.data.title}</a>
              </li>
            ))
            .reverse()
        }
      </ul>
    </nav>
  </div>
</Layout>

<style>
  .blog-container {
    background-color: var(--wizardWhite);
    color: var(--tpkBlack);
    margin: 0 auto;
    padding: 1rem;
    text-align: center;
  }

  .blog-container main {
    padding-bottom: 2rem;
  }

  .blog-container h1 {
    font-size: 2rem;
  }

  .blog-container p {
    font-size: 1.25rem;
    line-height: 1.5;
    margin: 0 auto;
    max-width: 66ch;
  }

  .blog-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    height: 100%;
    list-style: none;
    margin: 0 auto;
    max-width: 88ch;
    padding: 1rem;
  }

  nav ul li {
    height: 14rem;
    width: 100%;
    transition: scale 200ms ease-in-out;
  }

  nav ul li:hover {
    scale: 1.05;
  }

  nav ul li a {
    align-items: center;
    background: var(--manaBlue);
    border-radius: 1rem;
    color: var(--tpkBlack);
    display: flex;
    flex-direction: column;
    font-size: 1.5rem;
    font-weight: 600;
    height: 100%;
    justify-content: center;
    padding: 1rem;
    text-decoration: none;
    width: 100%;
  }

  nav ul li a:hover {
    text-decoration: underline;
  }

  article {
    padding: 1rem;
    background: #fff;
  }

  @media screen and (min-width: 768px) {
    .blog-grid {
      display: grid;
      flex-direction: initial;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      grid-template-rows: 14rem;
      grid-gap: 1rem;
      height: 100%;
      list-style: none;
      margin: 0 auto;
      max-width: 88ch;
      padding: 1rem;
    }

    .blog-container h1 {
      font-size: 4rem;
      padding-bottom: 2rem;
      padding-top: 2rem;
    }
  }
</style>
