---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const surface = "#ffffff";
const text = "#000000";

const actionBg = "#0000ff";
const dangerBg = "#e30000";
const infoBg = "#00aeef";
const warningBg = "#ffed00";

// New
const wizardWhite = "#ffffff";
const tpkBlack = "#000000";

const fourXBlue = "#0000ff";
const sandboxGold = "#ffb533";
const oneUpPink = "#ff2aff";
const rageQuitRed = "#ff0000";
const manaBlue = "#00aeef";
const oneUpGreen = "#43a047";
const n00bYellow = "#ffed00";
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@400;900&display=swap"
      rel="stylesheet"
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <script type="text/javascript">
      (function (c, l, a, r, i, t, y) {
        c[a] =
          c[a] ||
          function () {
            (c[a].q = c[a].q || []).push(arguments);
          };
        t = l.createElement(r);
        t.async = 1;
        t.src = "https://www.clarity.ms/tag/" + i;
        y = l.getElementsByTagName(r)[0];
        y.parentNode.insertBefore(t, y);
      })(window, document, "clarity", "script", "k5tucwiaeh");
    </script>

    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="The TTRPG companion you can't life without."
    />
    <meta
      name="keywords"
      content="ttrpg, tabletop, rpg, companion, ttrpg ai, ai, nurl, nurl app, ttrpg app, time tracker, ttrpg time tracker, table top games, d&d, dungeons and dragons, warhammer, warhammer 3000"
    />
    <meta name="theme-color" content="#0000ff" />

    <!-- X tags -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@nurl_inc" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="See why everyone loves using Nurl at https://nurl.website today."
    />
    <meta name="twitter:image" content="https://nurl.website/og-meta.jpg" />
    <meta name="twitter:image:alt" content="Nurl logo" />

    <!-- OG tags -->
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content="The next gen of table-top RPG gaming apps."
    />
    <meta property="og:image" content="https://nurl.website/og-meta.jpg" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nurl.website" />
    <meta property="og:site_name" content="Nurl" />
    <meta property="og:locale" content="en_US" />

    <title>{title}</title>
  </head>

  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style
  is:global
  define:vars={{
    surface,
    text,
    actionBg,
    dangerBg,
    infoBg,
    warningBg,
    // new
    wizardWhite,
    tpkBlack,
    fourXBlue,
    rageQuitRed,
    manaBlue,
    oneUpGreen,
    n00bYellow,
    sandboxGold,
    oneUpPink,
  }}
>
  *,
  *::before,
  *::after {
    box-sizing: border-box;
  }

  * {
    margin: 0;
    padding: 0;
    font: inherit;
  }

  html {
    background-color: var(--fourXBlue);
    color: var(--wizardWhite);
    /* color-scheme: light dark; */
    font-family: "Lato", system-ui, sans-serif;
    font-weight: 400;
    font-size: 1em;
    line-height: 1.3;
    text-size-adjust: 100%;
    -webkit-font-smoothing: antialiased;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-weight: 900;
  }

  body {
    min-height: 100vh;
  }

  input,
  textarea,
  button,
  select {
    font-family: inherit;
    font-size: inherit;
    line-height: inherit;
  }
</style>
