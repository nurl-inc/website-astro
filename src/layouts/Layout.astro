---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />

		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="The TTRPG companion you can't life without." />
		<meta name="theme-color" content="#13151a" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:site" content="@nurl_inc" />
		<meta name="twitter:title" content={title} />
		<meta name="twitter:description" content="The TTRPG companion you can't life without." />
		<meta name="twitter:image" content="https://astro.build/twitter-card.jpg" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="The TTRPG companion you can't life without." />
		<meta property="og:image" content="https://astro.build/twitter-card.jpg" />
		<meta property="og:url" content="https://nurl.website" />
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="Nurl" />
		<meta property="og:locale" content="en_US" />

		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
